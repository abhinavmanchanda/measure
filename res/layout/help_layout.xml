<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ffffff" android:layout_height="wrap_content" android:layout_width="200dip" android:id="@+id/HelpLayout">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/HelpTextView" android:textColor="#000000" android:layout_marginBottom="25dip" android:layout_marginTop="25dip" android:textSize="14dip" android:layout_centerHorizontal="true"></TextView>


<Button android:layout_below="@id/HelpTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/HelpCloseButton" android:text="Close" android:textSize="14dip" android:onClick="closeButton" android:layout_alignParentRight="true"></Button>
</RelativeLayout>
